"""
# --------------------------- stage 3 -----------------------------------

import math

def hypotenuse(a, b):
    # Stage 3: Calculate sum and final result, checking intermediate sum.
    a_squared = a ** 2
    b_squared = b ** 2
    sum_of_squares = a_squared + b_squared
    
    print(f"Scaffolding: Sum of squares is {sum_of_squares}") # Scaffolding
    
    result = math.sqrt(sum_of_squares)
    return result # Now returning the calculated result 
    
"""


# --------------------------- stage 4 -----------------------------------

print(60 * " ")

import math

def hypotenuse(a, b):
    # Final Function: Computes hypotenuse using the Pythagorean theorem.
    # Scaffolding has been removed for a clean, production-ready function.
    return math.sqrt(a**2 + b**2)


# Required Test Calls:
print(f"hypotenuse(3, 4): {hypotenuse(3, 4)}")
print(f"hypotenuse(5, 12): {hypotenuse(5, 12)}")
print(f"hypotenuse(1, 1): {hypotenuse(1, 1)}")

print(60 * " ")
print(5*"-","End of Hypotenuse Function Execution",5*"-")
print(60 * " ")

