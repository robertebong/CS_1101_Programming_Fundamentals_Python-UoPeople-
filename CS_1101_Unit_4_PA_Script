# --------------------------- stage 2 -----------------------------------

def calculate_split_cost(bill, tip_percent, people):
    # Stage 2: Calculate the total bill including tip and check using scaffolding.
    tip_multiplier = 1 + (tip_percent / 100) # Convert 15% to 1.15
    total_bill = bill * tip_multiplier
    
    print(f"Scaffolding: Total bill w/ tip: ${total_bill:.2f}") # Scaffolding
    
    return 0.0 # Still returning placeholder

"""


# --------------------------- stage 2 -----------------------------------

def calculate_split_cost(bill, tip_percent, people):
    # Final Function: Calculates the cost per person including tip.
    # The return value is rounded to two decimal places for currency format.
    
    tip_multiplier = 1 + (tip_percent / 100) # Convert percentage (e.g., 15) to multiplier (1.15)
    total_bill = bill * tip_multiplier
    cost_per_person = total_bill / people
    
    return round(cost_per_person, 2) # Round to standard currency precision (2 decimal places)

# Required Test Calls:
print(f"Bill $100.00, 15% tip, 2 people: ${calculate_split_cost(100.00, 15, 2)}")
print(f"Bill $55.50, 20% tip, 3 people: ${calculate_split_cost(55.50, 20, 3)}")
print(f"Bill $24.99, 10% tip, 1 person: ${calculate_split_cost(24.99, 10, 1)}")

print(60 * " ")
print(5*"-","End of Bill Function Execution",5*"-")
print(60 * " ")